<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7.0" method="upgrade">
	<name>Widgetkit</name>
	<author>YOOtheme-ارس دیزاین</author>
	<creationDate>January 2013-اسفند 1391</creationDate>
	<updateUrl>http://www.yootheme.com/updates</updateUrl>
	<copyright>Copyright (C) YOOtheme GmbH , Translated By Aras Design</copyright>
	<license>YOOtheme Proprietary Use License (http://www.yootheme.com/license)</license>
	<authorEmail>info@yootheme.com</authorEmail>
	<authorUrl>http://www.arasdesign.ir</authorUrl>
	<version>1.3.5</version>
	<description>کیتی از افزونه های حرفه ای فارسی - ویجت کیت ، فارسی شده توسط ارس دیزاین</description>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">installation/install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">installation/uninstall.sql</file>
		</sql>
	</uninstall>
	<scriptfile>installer.php</scriptfile>
	<media destination="widgetkit" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>widgets</folder>
	</media>
	<files folder="site">
		<filename>widgetkit.php</filename>
	</files>
	<administration>
		<menu img="components/com_widgetkit/images/widgetkit_16.png">COM_WIDGETKIT</menu>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_widgetkit.sys.ini</language>
			<language tag="fa-IR">language/fa-IR/fa-IR.com_widgetkit.sys.ini</language>
		</languages>
		<files folder="admin">
			<filename>README.markdown</filename>
			<filename>widgetkit.php</filename>
			<folder>classes</folder>
			<folder>css</folder>
			<folder>helpers</folder>
			<folder>images</folder>
			<folder>installation</folder>
			<folder>js</folder>
			<folder>layouts</folder>
			<folder>language</folder>
		</files>
	</administration>
	<additional>
		<module name="mod_widgetkit" folder="additional/module">ماژول ویجت کیت</module>
		<module name="mod_widgetkit_twitter" folder="additional/twitter">ماژول تویتر ویجت کیت فارسی</module>
		<plugin name="widgetkit_system" folder="additional/plugin/system">پلاگین سیستم ویجت کیت</plugin>
		<plugin name="widgetkit_content" folder="additional/plugin/content">پلاگین محتوای ویجت کیت</plugin>
		<plugin name="widgetkit_zoo" folder="additional/plugin/zoo">پلاگین زوو ویجت کیت</plugin>
		<plugin name="widgetkit_joomla" folder="additional/plugin/joomla">پلاگین جوملای ویجت کیت</plugin>
	</additional>
</extension>
