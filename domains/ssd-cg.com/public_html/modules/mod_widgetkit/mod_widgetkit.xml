	<version>1.0.0</version>
	<description>ماژول ویجت کیت جهت اجرای افزونه های ویجت کیت در سایت</description>
	<files>
		<filename module="mod_widgetkit">mod_widgetkit.php</filename>
		<folder>elements</folder>
	</files>
	<params addpath="/modules/mod_widgetkit/elements">
		<param name="widget_id" type="widget" default="" label="ویجت" description="یک ویجت جهت نمایش انتخاب کنید" />
		<param name="moduleclass_sfx" type="text" default="" label="کلاس ماژول" description="کلاس ماژول" />		
	</params>
	<config>
		<fields name="params" >
			<fieldset name="basic" addfieldpath="/modules/mod_widgetkit/elements">
				<field name="widget_id" type="widget" default="" label="ویجت" description="یک ویجت جهت نمایش انتخاب کنید" />
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" default="" label="کلاس ماژول" description="کلاس ماژول" />
			</fieldset>		
		</fields>
	</config>
</extension>